<p id="notice"><%= notice %></p>

<h1>
  <%= @list.name %>
</h1>

<div data-controller="sortable" data-sortable-animation="150" data-sortable-handle=".handle" data-sortable-resource-name="todo">
  <% @list.todos.each do |todo| %>
    <%= render partial: 'todos/entry', locals: { todo: todo } %>
  <% end %>
</div>

<%= link_to 'Edit', edit_list_path(@list) %> |
